<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.secondlifestory" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CharacterActivity"
            android:label="@string/title_activity_character" >
        </activity>

        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName=".CharacterActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.secondlifestory.CharacterActivity" />
        </activity>

        <activity
            android:name=".CustomizeActivity"
            android:label="@string/title_activity_customize"
            android:parentActivityName=".CharacterActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.secondlifestory.CharacterActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".CharacterActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CharacterActivity" />
        </activity>
    </application>

</manifest>
