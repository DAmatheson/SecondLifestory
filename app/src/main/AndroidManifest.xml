<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.drewm.secondlifestory" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CharacterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".CharacterActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CharacterActivity" />
        </activity>
        <activity
            android:name=".EventListActivity"
            android:label="@string/title_event_list"
            android:parentActivityName=".CharacterActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.drewm.secondlifestory.CharacterActivity" />
        </activity>
    </application>

</manifest>
