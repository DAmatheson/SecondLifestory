<?xml version="1.0" encoding="utf-8"?>

<!-- character_twopane.xml
    Purpose: Two-pane layout for CharacterActivity

    Drew Matheson, 2015.11.17: Created
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".CharacterListActivity">

    <!--
    This layout is a two-pane layout for the Characters
    master/detail flow.
    -->

    <fragment
        android:id="@+id/character_list"
        android:name="ca.secondlifestory.activities.character.CharacterListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@android:layout/list_content" />

    <fragment
        android:id="@+id/character_detail"
        android:name="ca.secondlifestory.activities.character.CharacterDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
