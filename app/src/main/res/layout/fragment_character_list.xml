    Purpose: List fragment layout for CharacterListFragment

    Drew Matheson, 2015.11.17: Created
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pageLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:background="@color/background_material_dark"
        android:src="@drawable/ic_add_circle_outline_white_36dp" />

    <ListView
        android:id="@android:id/list"
        style="@style/listViewStyle" />

    <TextView
        style="@style/emptyListViewItem"
        android:id="@android:id/empty"
        android:text="@string/charactersEmptyEntry" />
</LinearLayout>