<?xml version="1.0" encoding="utf-8"?>

<!-- fragment_event_list.xml
    Purpose: List fragment layout for EventListFragment

    Drew Matheson, 2015.11.17: Created
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/pageLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/character_name"
            style="@style/pageHeader"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/character_name" />
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@color/background_material_dark"
            android:src="@drawable/ic_playlist_add_white_36dp" />
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/listViewStyle" />

    <TextView
        style="@style/emptyListViewItem"
        android:id="@android:id/empty"
        android:text="@string/eventsEmptyEntry" />
</LinearLayout>